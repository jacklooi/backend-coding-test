{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "lint": "tsc --noEmit && eslint --ext .js --ext .ts",
    "test": "mocha tests",
    "coverage": "nyc npm run test",
    "coverage:report": "nyc report --reporter=lcov --reporter=text",
    "start": "ts-node dist/index.js",
    "dev": "ts-node-dev --respawn index.js",
    "build": "tsc -p ."
  },
  "pre-push": [ 
    "test"
  ],
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.16.4",
    "sqlite3": "^4.0.6",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/winston": "^2.4.4",
    "eslint": "^5.16.0",
    "mocha": "^6.1.4",
    "nyc": "^15.1.0",
    "pre-push": "^0.1.1",
    "supertest": "^4.0.2",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  }
}
